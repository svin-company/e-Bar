<Window x:Class="AdministratorApp.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdministratorApp"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Title="MainWindow"
        Height="600"
        Width="900"
        Background="Transparent"
        FontFamily="Segoe UI Variable"
        SnapsToDevicePixels="True">
    <Window.Resources>
        <Style x:Key="Win11Button" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#2A2A2D" />
            <Setter Property="BorderBrush" Value="#00000000" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#313136" />
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="8" ShadowDepth="1" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#232326" />
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.995" ScaleY="0.995" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E6E6E6" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="305*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="157*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <Border CornerRadius="12" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="5"
                Background="#151518">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="25*" />
                    <RowDefinition Height="55*" />
                    <RowDefinition Height="55*" />
                    <RowDefinition Height="55*" />
                    <RowDefinition Height="270*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="164*" />
                    <ColumnDefinition Width="448*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="24*"/>
                    <ColumnDefinition Width="24*"/>
                    <ColumnDefinition Width="24*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="5" Grid.Row="0" Style="{StaticResource Win11Button}" Content="X" Height="16" Width="16" Click="CloseButton_OnClick"/>
                <Button Grid.Column="4" Grid.Row="0" Style="{StaticResource Win11Button}" Content="⬛" Height="16" Width="16" Click="MaximizeButton_OnClick"/>
                <Button Grid.Column="3" Grid.Row="0" Style="{StaticResource Win11Button}" Content="-" Height="16" Width="16" Click="MinimizeButton_OnClick"/>

                <Rectangle Margin="4" Fill="#151518" Grid.Row="0" Grid.ColumnSpan="3" MouseLeftButtonDown="DragWindow"/>

                <TextBlock Grid.Row="1" Style="{StaticResource SectionHeader}" Text="Официанты" />

                <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource Win11Button}" Content="Добавить официанта"
                        FontSize="12" Margin="6,6,6,6" />
                <Button Grid.Column="0" Grid.Row="3" Style="{StaticResource Win11Button}" Content="Изменить официанта"
                        FontSize="12" Margin="6,6,6,6" />
                <Button Grid.Column="0" Grid.Row="4" Style="{StaticResource Win11Button}" Content="Удалить официанта"
                        FontSize="12" Margin="6,6,6,6" />

                <TextBlock Grid.Column="2" Grid.Row="1" Style="{StaticResource SectionHeader}" Text="Сектора" HorizontalAlignment="Center" Grid.ColumnSpan="2" />

                <Button Grid.Column="2" Grid.Row="2" Style="{StaticResource Win11Button}" Content="Добавить сектор"
                        FontSize="12" Margin="6,6,6,6" Grid.ColumnSpan="4" />
                <Button Grid.Column="2" Grid.Row="3" Style="{StaticResource Win11Button}" Content="Изменить сектор"
                        FontSize="12" Margin="6,6,6,6" Grid.ColumnSpan="4" />
                <Button Grid.Column="2" Grid.Row="4" Style="{StaticResource Win11Button}" Content="Удалить сектор"
                        FontSize="12" Margin="6,6,6,6" Grid.ColumnSpan="4" />

                <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="6" Margin="6,6,6,6" CornerRadius="8"
                        Background="#111113" BorderBrush="#222225" BorderThickness="1">
                    <TextBlock Text="Главная область приложения" Foreground="#BDBDBD" VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>