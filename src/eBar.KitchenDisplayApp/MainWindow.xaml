<Window x:Class="eBar.KitchenDisplayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:eBar.KitchenDisplayApp"
        mc:Ignorable="d"
        Title="MainWindow"
        MinHeight="450"
        MinWidth="800"
        Background="#202020"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="400*" />
            <ColumnDefinition Width="40*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Background="#404040">
            <StackPanel
                VerticalAlignment="Top"
                x:Name="LeftStackPanel"
                Grid.Row="0"
                Orientation="Vertical"
                HorizontalAlignment="Left" />
        </Grid>


        <StackPanel x:Name="MiddleStackPanel" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" />


        <Grid Grid.Row="0" Grid.Column="2" Background="#404040">
            <StackPanel
                VerticalAlignment="Top"
                x:Name="RightStackPanel"
                Grid.Row="0"
                Orientation="Vertical"
                HorizontalAlignment="Center" />
        </Grid>


        <Grid Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" Background="#303030">
        </Grid>
        <controls:OrderControl Grid.Row="1" Grid.Column="2"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               LeftTarget="{Binding ElementName=LeftStackPanel}"
                               MiddleTarget="{Binding ElementName=MiddleStackPanel}"
                               RightTarget="{Binding ElementName=RightStackPanel}" />
    </Grid>
</Window>