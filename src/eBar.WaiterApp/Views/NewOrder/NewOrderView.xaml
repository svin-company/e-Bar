<Window x:Class="eBar.WaiterApp.Views.NewOrder.NewOrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eBar.WaiterApp.Views.NewOrder"
        xmlns:converter="clr-namespace:eBar.WaiterApp.ParameterConverter"
        mc:Ignorable="d"
        Title="Новый заказ" Height="450" Width="800">
    <Window.Resources>
        <converter:ConfirmParametersConverter x:Key="ConfirmParametersConverter"/>
    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition  Width="4*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Foods}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <Image Source="/Images/food.jpg" 
                    Height="80"/>
                            <Label Content="{Binding Name}"
               HorizontalAlignment="Center"/>
                            <Button Content="{Binding Price}"
                ContentStringFormat ="{}{0} ₽"
                HorizontalAlignment="Center"
                Width="50"
                Command="{Binding DataContext.AddCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                CommandParameter="{Binding}"
                Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" 
                    Content="Официант"
                    Margin="3"
                    HorizontalAlignment="Left"></Label>
                
                <ComboBox Grid.Column="1"
                    x:Name="waiterCombobox"
                    Width="150" Height="40"
                    HorizontalAlignment="Right"
                    Margin="3"
                    ItemsSource="{Binding Waiters}"
                    SelectedIndex="0"
                    DisplayMemberPath="Name"
                    SelectedValuePath="Id">
                </ComboBox>

                <Label Grid.Column="2" 
                    Content="Cтол"
                   Margin="3"
                    HorizontalAlignment="Right"></Label>
                <ComboBox Grid.Column="3"
                            x:Name="tableCombobox"
                            Width="40" Height="40"
                            HorizontalAlignment="Right"
                            Margin="3"
                            ItemsSource="{Binding Tables}"
                            SelectedIndex="0"
                            DisplayMemberPath="Id"
                            SelectedValuePath="Id">
                </ComboBox>
            </Grid>

            <DataGrid Grid.Row="1" 
              x:Name="NewOrderDataGrid" 
              Margin="5" 
              CanUserAddRows="false" 
              AutoGenerateColumns="False"
              ItemsSource="{Binding Order.OrderItems}">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="2*" Header="Название" Binding="{Binding Food.Name}"/>
                    <DataGridTextColumn Width="1*" Header="Кол-во" Binding="{Binding Amount}"/>
                    <DataGridTextColumn Width="1*" Header="Стоимость" Binding="{Binding TotalPrice}"/>

                    <DataGridTemplateColumn Header=""  Width="1*" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="X" 
                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Row="2">
                <Button Grid.Column="0"
                Content="ОК"
                Width="100"
                HorizontalAlignment="Right"
                Margin="10"
                Command="{Binding DataContext.ConfirmCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                    <Button.CommandParameter>
                        <MultiBinding Converter="{StaticResource ConfirmParametersConverter}">
                            <Binding ElementName="tableCombobox" Path ="SelectedItem"/>
                            <Binding ElementName="waiterCombobox" Path ="SelectedItem"/>
                        </MultiBinding >
                    </Button.CommandParameter>
                </Button>
            </Grid>
        </Grid>

    </Grid>
</Window>
